{
	"name": "@bct/ui",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"bin": {
		"bct": "./dist/cli.js"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"src/assets"
	],
	"scripts": {
		"build": "tsup src/index.ts src/cli.ts --format esm --dts --splitting",
		"dev": "tsup src/index.ts src/cli.ts --format esm --dts --splitting --watch",
		"lint": "biome check .",
		"typecheck": "tsc -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@base-ui/react": "^1.1.0",
		"@clack/prompts": "^0.11.0",
		"clsx": "^2.1.1",
		"execa": "^9.5.2",
		"fs-extra": "^11.2.0",
		"tailwindcss": "^4.1.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/react": "^18.3.18",
		"react": "^18.3.1",
		"tsup": "^8.0.1"
	}
}
