{
	"name": "@bctechnology/ui",
	"version": "0.2.0",
	"private": false,
	"description": "A comprehensive, opinionated UI and design-system platform for BCT's frontend projects. Combines a centrally governed design system with a developer-friendly workflow inspired by shadcn/ui, tailored for BCT's needs.",
	"keywords": [
		"bct",
		"ui",
		"components",
		"design",
		"system",
		"frontend",
		"awesome"
	],
	"homepage": "https://github.com/BC-Technology/bct-ui#readme",
	"bugs": {
		"url": "https://github.com/BC-Technology/bct-ui/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BC-Technology/bct-ui.git"
	},
	"license": "ISC",
	"author": "BCT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"bct": "dist/cli.js"
	},
	"files": [
		"dist",
		"src/assets"
	],
	"scripts": {
		"build": "tsup src/index.ts src/cli.ts --format esm --dts --splitting",
		"dev": "tsup src/index.ts src/cli.ts --format esm --dts --splitting --watch",
		"lint": "biome check .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"prepublishOnly": "node scripts/verify-registry-version.mjs && pnpm build"
	},
	"dependencies": {
		"@base-ui/react": "^1.1.0",
		"@clack/prompts": "^0.11.0",
		"@rehookify/datepicker": "^6.6.8",
		"@tiptap/pm": "^2.10.0",
		"@tiptap/react": "^2.10.0",
		"@tiptap/starter-kit": "^2.10.0",
		"clsx": "^2.1.1",
		"date-fns": "^3.0.0",
		"execa": "^9.5.2",
		"fs-extra": "^11.2.0",
		"lucide-react": "^0.460.0",
		"tailwind-merge": "^2.5.0",
		"tailwindcss": "^4.1.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.0.1"
	}
}
